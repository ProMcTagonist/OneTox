<Page
    x:Name="PageRoot"
    x:Class="WinTox.View.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:WinTox.View.UserControls"
    xmlns:viewModel="using:WinTox.ViewModel"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary Source="ResourceDictionaries/ChatPageDictionary.xaml" />
    </Page.Resources>


    <Grid Background="{ThemeResource BackgroundColor}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="DefaultLayout">
                    <!-- The default Visibility properties are set in the XAML that defines the objects. -->
                </VisualState>
                <VisualState x:Name="MinimalLayout">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FriendInfo"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                                       Storyboard.TargetName="recentMessagesList">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Friend info and back button, list of recent messages, file send button -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Back button and friend info -->
            <Grid Grid.Row="0" VerticalAlignment="Top">

                <!-- Back button -->
                <Button Margin="20,60,0,0"
                        Command="{Binding NavigationHelper.GoBackCommand, ElementName=PageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" />

                <userControls:FriendInfo x:Name="FriendInfo" Margin="80,60,80,0" />
            </Grid>

            <userControls:RecentMessagesList x:Name="recentMessagesList" Grid.Row="1" Margin="20,80" />

            <Button Grid.Row="2" HorizontalAlignment="Center" Content="" Margin="20,0,20,20"
                    FontFamily="Segoe UI Symbol" FontSize="30" Click="SendFileButtonClick"
                    IsEnabled="{Binding IsConnected}" />
        </Grid>

        <!-- Current file transfer, list of messages and message input field -->
        <Grid Grid.Column="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Current file transfer -->
            <userControls:FileTransfersBlock Grid.Row="0" DataContext="{Binding FileTransfers}" />

            <!-- List of messages -->
            <ListView Grid.Row="1" x:Name="MessagesListView" Background="{StaticResource ChatBackgroundColor}"
                      ItemsSource="{Binding Conversation.MessageGroups}" SelectionMode="None"
                      HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <ListView.ItemContainerStyle>
                    <StaticResource ResourceKey="ChatPageListViewItemStyle" />
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <userControls:MessageBlock />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Friend typing indicator -->
            <Grid Grid.Row="2" Background="{StaticResource ChatBackgroundColor}"
                  Visibility="{Binding Conversation.IsFriendTyping, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Foreground="{StaticResource MainColor}" FontSize="20" Margin="10,2,0,2"
                           Text="{Binding Name, Converter={StaticResource FriendNameToTypingStatusConverter}}" />
            </Grid>

            <!-- Message input field -->
            <Grid Grid.Row="3" Background="{StaticResource MainColor}">
                <TextBox x:Name="MessageInput" Margin="20" FontSize="20" MinHeight="40" MaxHeight="250" Height="Auto"
                         KeyDown="MessageInputKeyDown" TextWrapping="Wrap" />
            </Grid>
        </Grid>
    </Grid>
</Page>