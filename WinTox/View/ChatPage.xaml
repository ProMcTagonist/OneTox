<Page
    x:Name="PageRoot"
    x:Class="WinTox.View.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:WinTox.View.UserControls"
    xmlns:viewModel="using:WinTox.ViewModel"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary Source="ResourceDictionaries/ChatPageDictionary.xaml" />
    </Page.Resources>

    <Grid Background="{ThemeResource BackgroundColor}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Back button and friend info -->
        <Grid Grid.Column="0" Grid.Row="0" Height="500" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Back button -->
            <Button Margin="40,60,0,0"
                    Command="{Binding NavigationHelper.GoBackCommand, ElementName=PageRoot}"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    VerticalAlignment="Top"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button" />

            <userControls:FriendInfo Grid.Column="1" Margin="0,60,0,0" />
        </Grid>

        <!-- Grid.Column="0" Grid.Row="1" ... TODO: List of recent chats comes here! -->

        <!-- List of messages and message input field -->
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- List of messages -->
            <ListView x:Name="MessagesListView" Grid.Row="0" Background="{StaticResource ChatBackgroundColor}"
                      ItemsSource="{Binding Conversation.MessageGroups}" SelectionMode="None"
                      HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <ListView.ItemContainerStyle>
                    <StaticResource ResourceKey="ChatPageListViewItemStyle" />
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <userControls:MessageBlock />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Friend typing indicator -->
            <Grid Grid.Row="1" Background="{StaticResource ChatBackgroundColor}"
                  Visibility="{Binding Conversation.IsFriendTyping, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Foreground="{StaticResource MainColor}" FontSize="20" Margin="10,2,0,2"
                           Text="{Binding Name, Converter={StaticResource FriendNameToTypingStatusConverter}}" />
            </Grid>

            <!-- Message input field -->
            <Grid Grid.Row="2" Background="{StaticResource MainColor}">
                <TextBox x:Name="MessageInput" Margin="20" FontSize="20" MinHeight="40" MaxHeight="250" Height="Auto"
                         KeyDown="MessageInputKeyDown" TextWrapping="Wrap" IsEnabled="{Binding IsConnected}" />
            </Grid>
        </Grid>
    </Grid>
</Page>